{
  // Configuração de debug para o Visual Studio Code
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/ConsultersIT.API/bin/Debug/net8.0/ConsultersIT.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/ConsultersIT.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/ConsultersIT.API/Views"
      }
    }
  ]
}
